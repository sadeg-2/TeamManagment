<script>
	$(document).on("click", ".addFeedBack", function (e) {
		e.preventDefault();
		const divElement = document.getElementById("kt_app_content_container");
		const dataId = divElement.getAttribute("data-id");
		$.ajax({
			url: "/TeamMember/CreateReview/",
			data:{
				reciverId: dataId
			},
			success: function (result) {
				console.log(result);
				$(".modal-content").html(result);
				$("#feedbackModel").modal("show");
			}
		});
		return false;
	});	
</script>	









