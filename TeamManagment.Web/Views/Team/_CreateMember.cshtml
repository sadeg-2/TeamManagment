@model CreateMemberDto

<!--begin::Modal - New Target-->
<div class="modal fade" id="kt_modal_1" tabindex="-1">
	<!--begin::Modal dialog-->
	<div class="modal-dialog modal-dialog-centered mw-650px">
		<!--begin::Modal content-->
		<div class="modal-content rounded">
			<!--begin::Modal header-->
			<div class="modal-header pb-0 border-0 justify-content-end">
				<!--begin::Close-->
				<div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
					<!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
					<span class="svg-icon svg-icon-1">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
							<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
						</svg>
					</span>
					<!--end::Svg Icon-->
				</div>
				<!--end::Close-->
			</div>
			<!--begin::Modal header-->
			<!--begin::Modal body-->
			<div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
				<!--begin:Form-->
				<form id="FormCreate" class="form" asp-action="CreateMember" asp-controller="Team" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<!--begin::Heading-->
					<div class="mb-13 text-center">
						<!--begin::Title-->
						<h1 class="mb-3">Add New Member</h1>
						<!--end::Title-->
					</div>
					<!--end::Heading-->
					<!--begin::Input group-->
					<div class="row g-p mb-8">
						<div class="col-md-9 fv-row">
							<label asp-for="MemberUserName"  class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">Member User Name</span>
							</label>
							<input asp-for="MemberUserName" type="text" class="form-control form-control-solid" placeholder="Enter Title " />
							<span asp-validation-for="MemberUserName" class="text-danger"></span>
						</div>
					</div>
					<!--end::Input group-->
					<!--begin::Input group-->
					<div class="row g-9 mb-8">
						<!--begin::Col-->
						<div class="col-md-6 fv-row">
							<label class="required fs-6 fw-semibold mb-2">Assign</label>
							<select asp-for="MemberPosition" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Team Member Type">
								<option value="">Select user...</option>
								<option value=@TeamUserType.TeamLeader>Team Leader</option>
								<option value=@TeamUserType.TeamMember>TeamMember</option>
							</select>
						</div>
						<!--end::Col-->
					</div>

					<br>
					<br>

					<!--begin::Actions-->
					<div class="text-center">
						<input id="kt_modal_1_submit" type="submit" value="Submits" class="btn btn-primary" />
						<button type="reset" id="kt_modal_1_cancel" class="btn btn-light me-3">Cancel</button>
					</div>
					<!--end::Actions-->
				</form>
				<!--end:Form-->
			</div>
			<!--end::Modal body-->
		</div>
		<!--end::Modal content-->
	</div>
	<!--end::Modal dialog-->
</div>
<!--end::Modal - New Target-->

